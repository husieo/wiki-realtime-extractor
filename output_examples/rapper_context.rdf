  <rdf:Description rdf:about="http://dbpedia.org/resource/Arystofanes?dbpv=2021-12&amp;nif=context">
    <ns0:predLang xmlns:ns0="http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core#">http://lexvo.org/id/iso639-3/eng</ns0:predLang>
